generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  @@map("users") // <--- Esto le dice a Prisma: "Busca en la tabla 'users' que ya llenamos"
}

model Customer {
  id        String @id @default(uuid())
  name      String
  email     String
  image_url String
  @@map("customers")
}

model Invoice {
  id          String   @id @default(uuid())
  customer_id String
  amount      Int
  status      String
  date        DateTime @db.Date
  @@map("invoices")
}

model Revenue {
  month   String @unique
  revenue Int
  @@map("revenue")
}


