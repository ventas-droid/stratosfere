generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id            String   @id @default(cuid()) @map("_id")
  email         String   @unique
  name          String?
  phone         String?
  avatar        String?
  role          UserRole @default(PARTICULAR)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  cif           String?
  companyName   String?
  licenseNumber String?
  password      String?
  surname       String?
  website       String?
  companyLogo   String?
  coverImage    String?
  licenseType   String?  @default("STARTER")
  mobile        String?
  tagline       String?
  zone          String?
ambassadorProfile AmbassadorProfile?
  // Relaciones B√°sicas
  favorites                Favorite[]
  properties               Property[]
  conversationParticipants ConversationParticipant[]
  messagesSent             Message[]
  blocksOut                UserBlock[]             @relation("UserBlocksOut")
  blocksIn                 UserBlock[]             @relation("UserBlocksIn")

  // Inteligencia T√°ctica
  lastLoginAt  DateTime? @default(now())
  loginCount   Int       @default(0)
  lastActiveAt DateTime? @default(now())

  // üî• EL PUENTE SAAS (Agencia) - UNIFICADO
  assignments PropertyAssignment[]

  // ‚úÖ Datos de Agencia
  agencyTrialStartedAt DateTime?
  agencyTrialEndsAt    DateTime?
  agencyGraceEndsAt    DateTime?

// --- üéñÔ∏è SECCI√ìN EMBAJADORES (NUEVO) ---
  
  // 1. Jerarqu√≠a (¬øQui√©n es mi Comandante?)
  recruitedById String?
  recruitedBy   User?   @relation("AgencyRecruits", fields: [recruitedById], references: [id])
  
  // 2. Mi Tropa (Si soy Agencia, ¬øa qui√©n he reclutado?)
  recruits      User[]  @relation("AgencyRecruits")

  // 3. Mis Victorias (Leads que yo he generado como embajador)
  generatedLeads Lead[] @relation("AmbassadorLeads")

  // ‚úÖ Relaciones Inversas
  subscription    Subscription?
  agencyContacts  AgencyContact[]
  agencyCampaigns Campaign[]
  agencyTasks     Task[]

  // üî• OPEN HOUSE
  openHouseAttendances OpenHouseAttendee[]

  // --- üöÄ STRATOSFERE AMBASSADOR ENGINE (NUEVO) ---
  ambassadorStats AmbassadorStats?
  affiliateClicks AffiliateClick[]
  commissions     Commission[]
}
model Property {
  id      String  @id @default(cuid())
  refCode String? @unique
  userId  String?

  // Datos F√≠sicos
  address   String
  city      String?
  region    String?
  postcode  String?
  latitude  Float?
  longitude Float?
  type      String  @default("Piso")
  floor     String?
  door      String?
  elevator  Boolean @default(false)
  mBuilt    Float
  rooms     Int
  baths     Int

  // Extras
  pool      Boolean @default(false)
  garage    Boolean @default(false)
  garden    Boolean @default(false)
  security  Boolean @default(false)
  terrace   Boolean @default(false)
  balcony   Boolean @default(false)
  storage   Boolean @default(false)
  ac        Boolean @default(false)
  heating   Boolean @default(false)
  furnished Boolean @default(false)

  // Detalles
  state       String?
  orientation String?
  exterior    Boolean? @default(true)

  // Marketing & Estad√≠sticas
  title            String?
  description      String?
  mainImage        String?
  price            Float?
  communityFees    Float?
  selectedServices String[]
  status           String   @default("BORRADOR")
  views            Int      @default(0)
  photoViews       Int      @default(0) // ‚úÖ Confirmado
  shareCount       Int      @default(0) // ‚úÖ Confirmado
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  ownerSnapshot    Json?

  // Energ√≠a
  energyConsumption String?
  energyEmissions   String?
  energyPending     Boolean @default(false)

  // üî• SAAS: Multimedia & Legal
  videoUrl      String?
  tourUrl       String?
  simpleNoteUrl String?
  energyCertUrl String?

  // üî• SAAS: Pay to Win
  promotedTier  String    @default("FREE")
  isPromoted    Boolean   @default(false) // ‚úÖ Confirmado
  promotedUntil DateTime?                 // ‚úÖ Confirmado

  // üî• SAAS: B2B (Comisiones)
  mandateType     String? @default("ABIERTO")
  commissionPct   Float   @default(0)
  sharePct        Float   @default(0)
  shareVisibility String  @default("PRIVATE")

  // RELACIONES
  user User? @relation(fields: [userId], references: [id])

  // üî• CONEXI√ìN CON AGENCIA
  assignment PropertyAssignment?

  images            Image[]
  favoritedBy       Favorite[]
  serviceOrders     ServiceOrder[]
  campaigns         Campaign[]
  tasks             Task[]
  openHouses        OpenHouse[]
// A√±adir dentro de model Property:
  leads Lead[]
  // --- üöÄ STRATOSFERE AMBASSADOR ENGINE (NUEVO) ---
  // Estas dos l√≠neas son OBLIGATORIAS para que no falle el schema
  affiliateClicks AffiliateClick[]
  commissions     Commission[]
}

model Image {
  id         String   @id @default(cuid())
  url        String
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model ServiceOrder {
  id        String  @id @default(cuid())
  serviceId String
  name      String
  price     Float
  paid      Boolean @default(false)

  // ‚úÖ Tracking Mollie (pago √∫nico por publicar)
  provider      String?
  providerPayId String?

  // üî• AQU√ç EST√Å LA CLAVE
  payStatus String @default("OPEN") @map("estado de pago")

  paidAt   DateTime?
  metadata Json?

  propertyId String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([providerPayId])
  @@index([payStatus])
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, propertyId])
  @@index([userId])
  @@index([propertyId])
}

// =========================================================
// üí¨ CHAT GENERAL (Intra-usuario)
// =========================================================

model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Contexto opcional (cuando nace desde una propiedad)
  propertyId  String?
  propertyRef String?

  participants ConversationParticipant[]
  messages     Message[]

  @@index([propertyId])
  @@index([updatedAt])
}

model ConversationParticipant {
  id             String    @id @default(cuid())
  conversationId String
  userId         String
  createdAt      DateTime  @default(now())
  lastReadAt     DateTime? @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  text           String
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([senderId])
}

model UserBlock {
  id        String   @id @default(cuid())
  blockerId String
  blockedId String
  createdAt DateTime @default(now())

  blocker User @relation("UserBlocksOut", fields: [blockerId], references: [id], onDelete: Cascade)
  blocked User @relation("UserBlocksIn", fields: [blockedId], references: [id], onDelete: Cascade)

  @@unique([blockerId, blockedId])
  @@index([blockerId])
  @@index([blockedId])
}

enum UserRole {
  ADMIN
  PARTICULAR
  AGENCIA
  DIFUSOR
}

model Subscription {
  id                 String   @id @default(cuid())
  userId             String   @unique // agencia = User
  plan               PlanCode @default(STARTER)
  status             String   @default("ACTIVE") // ACTIVE|PAST_DUE|CANCELED
  provider           String? // PADDLE | MOLLIE
  providerSubId      String? // subscription id (si aplica)
  providerCustomerId String? // Mollie customer id

  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([plan])
  @@index([status])
}

model PlanUsage {
  id            String   @id @default(cuid())
  userId        String // agencia
  period        String // "2026-01"
  campaignsSent Int      @default(0) // contador mensual
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, period])
  @@index([userId])
}

model AgencyContact {
  id        String   @id @default(cuid())
  userId    String // agencia (User)
  name      String
  email     String?
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum CommissionShareVisibility {
  PRIVATE
  AGENCIES
  PUBLIC
}

model Campaign {
  id         String         @id @default(cuid())
  propertyId String
  agencyId   String // User.id con role AGENCIA
  status     CampaignStatus @default(DRAFT)

  message    String? // propuesta
  serviceIds String[] // ids de tu cat√°logo (plano_3d, foto, etc.)
  signature  Json? // firma/aceptaci√≥n (opcional, luego)

  conversationId String? // conecta con tu chat general
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  agency   User     @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  // ‚úÖ T√©rminos de propuesta (persistentes en BD)
  priceAtProposal  Float @default(0)
  commissionPct    Float @default(0)
  commissionIvaPct Float @default(0)

  // üî• CAMPOS NUEVOS PARA EL CONTRATO DETALLADO (VITALES PARA EL STOCK)
  mandateType String? @default("SIMPLE") // "EXCLUSIVE" | "SIMPLE" | "OPEN"
  valuation   Float?  @default(0) // Precio de valoraci√≥n acordado
  duration    String? @default("6 Meses") // Texto libre: "6 Meses", "1 A√±o", etc.

  commissionSharePct        Float                     @default(0)
  commissionShareVisibility CommissionShareVisibility @default(AGENCIES)

  exclusiveMandate Boolean @default(true)
  exclusiveMonths  Int     @default(6)

  // ‚úÖ Importes calculados (snapshot)
  commissionBaseEur  Float @default(0)
  commissionIvaEur   Float @default(0)
  commissionTotalEur Float @default(0)
  commissionShareEur Float @default(0)

  @@unique([propertyId, agencyId]) // 1 campa√±a activa por propiedad+agencia (m√≠nimo)
  @@index([propertyId])
  @@index([agencyId])
  @@index([status])
}

enum CampaignStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
  EXPIRED
}

model PropertyAssignment {
  id String @id @default(cuid())

  // Conexiones (El puente)
  propertyId String  @unique // @unique es vital: 1 casa = 1 agencia asignada
  agencyId   String
  campaignId String?

  // Estado
  status String @default("ACTIVE") // ACTIVE | ENDED

  // Auditor√≠a
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relaciones (Los cables del puente)
  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  agency   User     @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  // √çndices de Velocidad
  @@index([agencyId])
  @@index([status])
}

model Task {
  id         String    @id @default(cuid())
  propertyId String
  agencyId   String
  campaignId String?
  type       String // "VISITA" | "PLANO_3D" | ...
  status     String    @default("TODO") // TODO|DOING|DONE
  dueAt      DateTime?
  payload    Json? // notas, ficheros, etc.
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  agency   User     @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([agencyId])
}

enum PlanCode {
  STARTER
  PRO
  AGENCY
}

// =========================================================
// üéâ OPEN HOUSE / EVENTOS DE AGENCIA
// =========================================================

model OpenHouse {
  id         String   @id @default(cuid())
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  startTime DateTime // Ej: 2024-10-20 10:00
  endTime   DateTime // Ej: 2024-10-20 14:00

  title       String?
  description String?
  amenities   String[] // ["DJ", "Catering", "Welcome Pack"]
  capacity    Int      @default(50)

  status String @default("SCHEDULED")

  attendees OpenHouseAttendee[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([propertyId])
}

model OpenHouseAttendee {
  id          String    @id @default(cuid())
  openHouseId String
  openHouse   OpenHouse @relation(fields: [openHouseId], references: [id], onDelete: Cascade)

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  name  String?
  email String?
  phone String?

  status String @default("CONFIRMED")

  createdAt DateTime @default(now())

  @@unique([openHouseId, userId])
  @@index([openHouseId])
  @@index([email])
}

// --- üöÄ STRATOSFERE AMBASSADOR ENGINE ---

model AmbassadorStats {
  id            String   @id @default(cuid())
  userId        String   @unique
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // M√©tricas
  totalClicks   Int      @default(0)
  totalLeads    Int      @default(0)
  totalSales    Int      @default(0)
  
  // Dinero
  totalRevenue  Float    @default(0) // Hist√≥rico generado
  pendingPayout Float    @default(0) // Bloqueado (Arras)
  availablePayout Float  @default(0) // Listo para retirar
  
  // Calidad
  score         Float    @default(5.0) 
  rank          String   @default("PARTNER") 
  
  updatedAt     DateTime @updatedAt
}

model AffiliateClick {
  id            String   @id @default(cuid())
  ambassadorId  String
  propertyId    String
  ipHash        String?  
  createdAt     DateTime @default(now())

  // Relaciones
  ambassador    User     @relation(fields: [ambassadorId], references: [id])
  property      Property @relation(fields: [propertyId], references: [id])
  
  @@index([ambassadorId])
  @@index([propertyId])
}

model Commission {
  id            String   @id @default(cuid())
  ambassadorId  String
  propertyId    String
  amount        Float
  status        String   @default("PENDING") // PENDING, LOCKED, AVAILABLE, PAID
  
  leadId        String?  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user          User     @relation(fields: [ambassadorId], references: [id])
  property      Property @relation(fields: [propertyId], references: [id])
}

// EN: prisma/schema.prisma

// --- EXPEDIENTE DEL EMBAJADOR (DATOS FISCALES Y CONTACTO) ---
model AmbassadorProfile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  
  fullName  String?  // Nombre Fiscal / Raz√≥n Social
  dni       String?  // DNI / CIF
  phone     String?  // Tel√©fono Operativo
  city      String?  // Ciudad Base
  address   String?  // Direcci√≥n Fiscal
  iban      String?  // Para pagos
  
  updatedAt DateTime @updatedAt
}

// üì© BUZ√ìN DE LEADS (INTERESADOS EXTERNOS)
model Lead {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Datos del Interesado
  name    String
  email   String
  phone   String?
  message String?
  
  // ¬øQu√© le interesa?
  propertyId String
  // üî• A√ëADIDO: onDelete: Cascade (Si borra la casa, se borran sus mensajes para no dejar basura)
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  // ¬øQui√©n gestiona este lead? 
  managerId  String? 

  // --- RASTREO (OPCIONAL) ---
  // Si es un cliente "puro", esto se quedar√° vac√≠o (null), y no pasa nada.
  ambassadorId String?
  ambassador   User?   @relation("AmbassadorLeads", fields: [ambassadorId], references: [id])
  
  // Estado del Lead
  status    String   @default("NEW") 
}