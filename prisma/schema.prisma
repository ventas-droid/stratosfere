generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model User {
  id                       String                    @id @default(cuid())
  email                    String                    @unique
  name                     String?
  phone                    String?
  avatar                   String?
  role                     UserRole                  @default(PARTICULAR)
  createdAt                DateTime                  @default(now())
  updatedAt                DateTime                  @updatedAt
  cif                      String?
  companyName              String?
  licenseNumber            String?
  password                 String?
  surname                  String?
  website                  String?
  companyLogo              String?
  coverImage               String?
  licenseType              String?                   @default("STARTER")
  mobile                   String?
  tagline                  String?
  zone                     String?
  favorites                Favorite[]
  properties               Property[]
  conversationParticipants ConversationParticipant[]
  messagesSent             Message[]
  blocksOut                UserBlock[]               @relation("UserBlocksOut")
  blocksIn                 UserBlock[]               @relation("UserBlocksIn")

  // ‚úÖ Agency access (source of truth)
  agencyTrialStartedAt DateTime?
  agencyTrialEndsAt    DateTime?
  agencyGraceEndsAt    DateTime?

  // ‚úÖ Opposite relations (SaaS / Radar)
  subscription      Subscription?
  agencyContacts    AgencyContact[]
  agencyCampaigns   Campaign[]
  agencyAssignments PropertyAssignment[]
  agencyTasks       Task[]
  // üî• NUEVA RELACI√ìN: ASISTENCIA A EVENTOS OPEN HOUSE
  openHouseAttendances      OpenHouseAttendee[]

}

model Property {
  id                String   @id @default(cuid())
  refCode           String?  @unique
  userId            String?
  address           String
  city              String?
  region            String?
  postcode          String?
  latitude          Float?
  longitude         Float?
  
  // TIPO Y DATOS B√ÅSICOS
  type              String   @default("Piso")
  floor             String?
  door              String?
  elevator          Boolean  @default(false)
  mBuilt            Float
  rooms             Int
  baths             Int

  // üî• CARACTER√çSTICAS Y EXTRAS (LISTA COMPLETA)
  pool              Boolean  @default(false)
  garage            Boolean  @default(false)
  garden            Boolean  @default(false)
  security          Boolean  @default(false)
  
  // ‚úÖ NUEVOS CAMPOS EXTRAS (Ya los ten√≠a, los mantenemos)
  terrace           Boolean  @default(false)
  balcony           Boolean  @default(false)
  storage           Boolean  @default(false)
  ac                Boolean  @default(false)
  heating           Boolean  @default(false)
  furnished         Boolean  @default(false)
  
  // ‚úÖ DETALLES DE ESTADO
  state             String?
  orientation       String?
  exterior          Boolean? @default(true)

  // CAMPOS RESTANTES
  title             String?
  description       String?
  energyConsumption String?
  energyEmissions   String?
  energyPending     Boolean  @default(false)
  mainImage         String?
  price             Float?
  communityFees     Float?
  selectedServices  String[]
  status            String   @default("BORRADOR")
  views             Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  ownerSnapshot     Json?

  // =========================================================
  // üî• NOVEDAD: CAMPOS SAAS AGENCIA (Multimedia & Legal)
  // =========================================================
  videoUrl          String?  // YouTube / Vimeo
  tourUrl           String?  // Matterport / 3D
  simpleNoteUrl     String?  // URL al PDF Nota Simple
  energyCertUrl     String?  // URL al PDF Certificado

  // =========================================================
  // üî• NOVEDAD: COLABORACI√ìN B2B (MLS)
  // =========================================================
  mandateType       String?  @default("ABIERTO") // "EXCLUSIVA" | "ABIERTO"
  commissionPct     Float    @default(0)         // Lo que cobra la agencia captadora
  sharePct          Float    @default(0)         // Lo que comparte (ej: 1.5%)
  shareVisibility   String   @default("PRIVATE") // "PRIVATE" | "AGENCIES" | "PUBLIC"

  // RELACIONES
  favoritedBy       Favorite[]
  images            Image[]
  user              User?    @relation(fields: [userId], references: [id])
  serviceOrders     ServiceOrder[]

  // ‚úÖ RELACIONES SAAS
  campaigns         Campaign[]
  assignment        PropertyAssignment?
  tasks             Task[]
  
  // ‚úÖ RELACI√ìN EVENTOS
  openHouses        OpenHouse[]
}

model Image {
  id         String   @id @default(cuid())
  url        String
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model ServiceOrder {
  id        String  @id @default(cuid())
  serviceId String
  name      String
  price     Float
  paid      Boolean @default(false)

  // ‚úÖ Tracking Mollie (pago √∫nico por publicar)
  provider      String?
  providerPayId String?

  // üî• AQU√ç EST√Å LA CLAVE
  payStatus     String @default("OPEN") @map("estado de pago")

  paidAt        DateTime?
  metadata      Json?

  propertyId String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([providerPayId])
  @@index([payStatus])
}


model Favorite {
  id         String   @id @default(cuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, propertyId])
  @@index([userId])
  @@index([propertyId])
}

// =========================================================
// üí¨ CHAT GENERAL (Intra-usuario)
// =========================================================

model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Contexto opcional (cuando nace desde una propiedad)
  propertyId  String?
  propertyRef String?

  participants ConversationParticipant[]
  messages     Message[]

  @@index([propertyId])
  @@index([updatedAt])
}

model ConversationParticipant {
  id             String    @id @default(cuid())
  conversationId String
  userId         String
  createdAt      DateTime  @default(now())
  lastReadAt     DateTime? @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  text           String
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([senderId])
}

model UserBlock {
  id        String   @id @default(cuid())
  blockerId String
  blockedId String
  createdAt DateTime @default(now())

  blocker User @relation("UserBlocksOut", fields: [blockerId], references: [id], onDelete: Cascade)
  blocked User @relation("UserBlocksIn", fields: [blockedId], references: [id], onDelete: Cascade)

  @@unique([blockerId, blockedId])
  @@index([blockerId])
  @@index([blockedId])
}

enum UserRole {
  ADMIN
  PARTICULAR
  AGENCIA
  DIFUSOR
}

model Subscription {
  id                 String   @id @default(cuid())
  userId             String   @unique // agencia = User
  plan               PlanCode @default(STARTER)
  status             String   @default("ACTIVE") // ACTIVE|PAST_DUE|CANCELED
  provider           String? // PADDLE | MOLLIE
  providerSubId      String? // subscription id (si aplica)
  providerCustomerId String? // Mollie customer id

  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([plan])
  @@index([status])
}

model PlanUsage {
  id            String   @id @default(cuid())
  userId        String // agencia
  period        String // "2026-01"
  campaignsSent Int      @default(0) // contador mensual
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, period])
  @@index([userId])
}

model AgencyContact {
  id        String   @id @default(cuid())
  userId    String // agencia (User)
  name      String
  email     String?
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum CommissionShareVisibility {
  PRIVATE
  AGENCIES
  PUBLIC
}

model Campaign {
  id         String         @id @default(cuid())
  propertyId String
  agencyId   String // User.id con role AGENCIA
  status     CampaignStatus @default(DRAFT)

  message    String? // propuesta
  serviceIds String[] // ids de tu cat√°logo (plano_3d, foto, etc.)
  signature  Json? // firma/aceptaci√≥n (opcional, luego)

  conversationId String? // conecta con tu chat general
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  agency   User     @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  // ‚úÖ T√©rminos de propuesta (persistentes en BD)
  priceAtProposal  Float @default(0)
  commissionPct    Float @default(0)
  commissionIvaPct Float @default(0)

  commissionSharePct        Float                     @default(0)
  commissionShareVisibility CommissionShareVisibility @default(AGENCIES)

  exclusiveMandate Boolean @default(true)
  exclusiveMonths  Int     @default(6)

  // ‚úÖ Importes calculados (snapshot)
  commissionBaseEur  Float @default(0)
  commissionIvaEur   Float @default(0)
  commissionTotalEur Float @default(0)
  commissionShareEur Float @default(0)

  @@unique([propertyId, agencyId]) // 1 campa√±a activa por propiedad+agencia (m√≠nimo)
  @@index([propertyId])
  @@index([agencyId])
  @@index([status])
}

enum CampaignStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
  EXPIRED
}

model PropertyAssignment {
  id         String   @id @default(cuid())
  propertyId String   @unique
  agencyId   String
  campaignId String?
  status     String   @default("ACTIVE") // ACTIVE|ENDED
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  agency   User     @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  @@index([agencyId])
}

model Task {
  id         String    @id @default(cuid())
  propertyId String
  agencyId   String
  campaignId String?
  type       String // "VISITA" | "PLANO_3D" | ...
  status     String    @default("TODO") // TODO|DOING|DONE
  dueAt      DateTime?
  payload    Json? // notas, ficheros, etc.
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  agency   User     @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([agencyId])
}

enum PlanCode {
  STARTER
  PRO
  AGENCY
}
// =========================================================
// üéâ OPEN HOUSE / EVENTOS DE AGENCIA
// =========================================================

model OpenHouse {
  id          String   @id @default(cuid())
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  startTime   DateTime // Ej: 2024-10-20 10:00
  endTime     DateTime // Ej: 2024-10-20 14:00
  
  title       String?  
  description String?  
  amenities   String[] // ["DJ", "Catering", "Welcome Pack"]
  capacity    Int      @default(50) 
  
  status      String   @default("SCHEDULED") 

  attendees   OpenHouseAttendee[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([propertyId])
}

model OpenHouseAttendee {
  id          String   @id @default(cuid())
  openHouseId String
  openHouse   OpenHouse @relation(fields: [openHouseId], references: [id], onDelete: Cascade)

  userId      String?
  user        User?     @relation(fields: [userId], references: [id])

  name        String?
  email       String?
  phone       String?
  
  status      String   @default("CONFIRMED") 

  createdAt   DateTime @default(now())

  @@unique([openHouseId, userId]) 
  @@index([openHouseId])
  @@index([email])
}