generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}
model User {
  id                     String                    @id @default(cuid()) @map("_id")
  email                  String                    @unique
  name                   String?
  phone                  String?
  avatar                 String?
  role                   UserRole                  @default(PARTICULAR)
  createdAt              DateTime                  @default(now())
  updatedAt              DateTime                  @updatedAt
  cif                    String?
  companyName            String?
  licenseNumber          String?
  password               String?
  surname                String?
  website                String?
  companyLogo            String?
  coverImage             String?
  licenseType            String?                   @default("STARTER")
  mobile                 String?
  tagline                String?
  zone                   String?
  
  // Relaciones BÃ¡sicas
  favorites              Favorite[]
  properties             Property[]
  conversationParticipants ConversationParticipant[]
  messagesSent           Message[]
  blocksOut              UserBlock[]               @relation("UserBlocksOut")
  blocksIn               UserBlock[]               @relation("UserBlocksIn")

  // Inteligencia TÃ¡ctica
  lastLoginAt            DateTime? @default(now())  
  loginCount             Int       @default(0)      
  lastActiveAt           DateTime? @default(now())  

  // ðŸ”¥ EL PUENTE SAAS (Agencia) - UNIFICADO
  // Esta lÃ­nea conecta con PropertyAssignment.agency
  assignments            PropertyAssignment[]

  // âœ… Datos de Agencia
  agencyTrialStartedAt   DateTime?
  agencyTrialEndsAt      DateTime?
  agencyGraceEndsAt      DateTime?

  // âœ… Relaciones Inversas
  subscription           Subscription?
  agencyContacts         AgencyContact[]
  agencyCampaigns        Campaign[]
  agencyTasks            Task[]
  
  // ðŸ”¥ OPEN HOUSE
  openHouseAttendances   OpenHouseAttendee[]
}
model Property {
  id             String   @id @default(cuid())
  refCode        String?  @unique
  userId         String?
  
  // Datos FÃ­sicos
  address        String
  city           String?
  region         String?
  postcode       String?
  latitude       Float?
  longitude      Float?
  type           String   @default("Piso")
  floor          String?
  door           String?
  elevator       Boolean  @default(false)
  mBuilt         Float
  rooms          Int
  baths          Int

  // Extras
  pool           Boolean  @default(false)
  garage         Boolean  @default(false)
  garden         Boolean  @default(false)
  security       Boolean  @default(false)
  terrace        Boolean  @default(false)
  balcony        Boolean  @default(false)
  storage        Boolean  @default(false)
  ac             Boolean  @default(false)
  heating        Boolean  @default(false)
  furnished      Boolean  @default(false)
  
  // Detalles
  state          String?
  orientation    String?
  exterior       Boolean? @default(true)

  // Marketing
  title          String?
  description    String?
  mainImage      String?
  price          Float?
  communityFees  Float?
  selectedServices String[]
  status         String   @default("BORRADOR")
 views           Int       @default(0)          // ESTA YA LA TIENE
  photoViews      Int       @default(0)          // <--- AÃ‘ADIR ESTA
  shareCount      Int       @default(0)          // <--- AÃ‘ADIR ESTA
createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ownerSnapshot  Json?

  // EnergÃ­a
  energyConsumption String?
  energyEmissions   String?
  energyPending     Boolean  @default(false)

  // ðŸ”¥ SAAS: Multimedia & Legal
  videoUrl          String?
  tourUrl           String?
  simpleNoteUrl     String?
  energyCertUrl     String?

 // ðŸ”¥ SAAS: Pay to Win
  promotedTier      String    @default("FREE") 
  isPromoted        Boolean   @default(false)  // <--- AÃ‘ADIR ESTA
  promotedUntil     DateTime?                  // <--- AÃ‘ADIR ESTA

  // ðŸ”¥ SAAS: B2B (Comisiones)
  mandateType       String?  @default("ABIERTO")
  commissionPct     Float    @default(0)
  sharePct          Float    @default(0)
  shareVisibility   String   @default("PRIVATE")

  // RELACIONES
  user              User?    @relation(fields: [userId], references: [id])
  
  // ðŸ”¥ CONEXIÃ“N CON AGENCIA
  assignment        PropertyAssignment?

  images            Image[]
  favoritedBy       Favorite[]
  serviceOrders     ServiceOrder[]
  campaigns         Campaign[]
  tasks             Task[]
  openHouses        OpenHouse[]
}
model Image {
  id         String   @id @default(cuid())
  url        String
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
}

model ServiceOrder {
  id        String  @id @default(cuid())
  serviceId String
  name      String
  price     Float
  paid      Boolean @default(false)

  // âœ… Tracking Mollie (pago Ãºnico por publicar)
  provider      String?
  providerPayId String?

  // ðŸ”¥ AQUÃ ESTÃ LA CLAVE
  payStatus     String @default("OPEN") @map("estado de pago")

  paidAt        DateTime?
  metadata      Json?

  propertyId String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([providerPayId])
  @@index([payStatus])
}


model Favorite {
  id         String   @id @default(cuid())
  userId     String
  propertyId String
  createdAt  DateTime @default(now())
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, propertyId])
  @@index([userId])
  @@index([propertyId])
}

// =========================================================
// ðŸ’¬ CHAT GENERAL (Intra-usuario)
// =========================================================

model Conversation {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Contexto opcional (cuando nace desde una propiedad)
  propertyId  String?
  propertyRef String?

  participants ConversationParticipant[]
  messages     Message[]

  @@index([propertyId])
  @@index([updatedAt])
}

model ConversationParticipant {
  id             String    @id @default(cuid())
  conversationId String
  userId         String
  createdAt      DateTime  @default(now())
  lastReadAt     DateTime? @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([conversationId, userId])
  @@index([userId])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  senderId       String
  text           String
  createdAt      DateTime @default(now())

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  sender       User         @relation(fields: [senderId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([senderId])
}

model UserBlock {
  id        String   @id @default(cuid())
  blockerId String
  blockedId String
  createdAt DateTime @default(now())

  blocker User @relation("UserBlocksOut", fields: [blockerId], references: [id], onDelete: Cascade)
  blocked User @relation("UserBlocksIn", fields: [blockedId], references: [id], onDelete: Cascade)

  @@unique([blockerId, blockedId])
  @@index([blockerId])
  @@index([blockedId])
}

enum UserRole {
  ADMIN
  PARTICULAR
  AGENCIA
  DIFUSOR
}

model Subscription {
  id                 String   @id @default(cuid())
  userId             String   @unique // agencia = User
  plan               PlanCode @default(STARTER)
  status             String   @default("ACTIVE") // ACTIVE|PAST_DUE|CANCELED
  provider           String? // PADDLE | MOLLIE
  providerSubId      String? // subscription id (si aplica)
  providerCustomerId String? // Mollie customer id

  currentPeriodStart DateTime?
  currentPeriodEnd   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([plan])
  @@index([status])
}

model PlanUsage {
  id            String   @id @default(cuid())
  userId        String // agencia
  period        String // "2026-01"
  campaignsSent Int      @default(0) // contador mensual
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, period])
  @@index([userId])
}

model AgencyContact {
  id        String   @id @default(cuid())
  userId    String // agencia (User)
  name      String
  email     String?
  phone     String?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum CommissionShareVisibility {
  PRIVATE
  AGENCIES
  PUBLIC
}

model Campaign {
  id         String         @id @default(cuid())
  propertyId String
  agencyId   String // User.id con role AGENCIA
  status     CampaignStatus @default(DRAFT)

  message    String? // propuesta
  serviceIds String[] // ids de tu catÃ¡logo (plano_3d, foto, etc.)
  signature  Json? // firma/aceptaciÃ³n (opcional, luego)

  conversationId String? // conecta con tu chat general
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  agency   User     @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  // âœ… TÃ©rminos de propuesta (persistentes en BD)
  priceAtProposal  Float @default(0)
  commissionPct    Float @default(0)
  commissionIvaPct Float @default(0)

  // ðŸ”¥ CAMPOS NUEVOS PARA EL CONTRATO DETALLADO (VITALES PARA EL STOCK)
  mandateType String? @default("SIMPLE") // "EXCLUSIVE" | "SIMPLE" | "OPEN"
  valuation   Float?  @default(0)        // Precio de valoraciÃ³n acordado
  duration    String? @default("6 Meses") // Texto libre: "6 Meses", "1 AÃ±o", etc.

  commissionSharePct            Float                     @default(0)
  commissionShareVisibility     CommissionShareVisibility @default(AGENCIES)

  exclusiveMandate Boolean @default(true)
  exclusiveMonths  Int     @default(6)

  // âœ… Importes calculados (snapshot)
  commissionBaseEur  Float @default(0)
  commissionIvaEur   Float @default(0)
  commissionTotalEur Float @default(0)
  commissionShareEur Float @default(0)

  @@unique([propertyId, agencyId]) // 1 campaÃ±a activa por propiedad+agencia (mÃ­nimo)
  @@index([propertyId])
  @@index([agencyId])
  @@index([status])
}

enum CampaignStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
  EXPIRED
}

model PropertyAssignment {
  id          String   @id @default(cuid())
  
  // Conexiones (El puente)
  propertyId  String   @unique  // @unique es vital: 1 casa = 1 agencia asignada
  agencyId    String
  campaignId  String?
  
  // Estado
  status      String   @default("ACTIVE") // ACTIVE | ENDED
  
  // AuditorÃ­a
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relaciones (Los cables del puente)
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  agency      User     @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  // Ãndices de Velocidad
  @@index([agencyId])
  @@index([status])
}

model Task {
  id         String    @id @default(cuid())
  propertyId String
  agencyId   String
  campaignId String?
  type       String // "VISITA" | "PLANO_3D" | ...
  status     String    @default("TODO") // TODO|DOING|DONE
  dueAt      DateTime?
  payload    Json? // notas, ficheros, etc.
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  property Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  agency   User     @relation(fields: [agencyId], references: [id], onDelete: Cascade)

  @@index([propertyId])
  @@index([agencyId])
}

enum PlanCode {
  STARTER
  PRO
  AGENCY
}
// =========================================================
// ðŸŽ‰ OPEN HOUSE / EVENTOS DE AGENCIA
// =========================================================

model OpenHouse {
  id          String   @id @default(cuid())
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)

  startTime   DateTime // Ej: 2024-10-20 10:00
  endTime     DateTime // Ej: 2024-10-20 14:00
  
  title       String?  
  description String?  
  amenities   String[] // ["DJ", "Catering", "Welcome Pack"]
  capacity    Int      @default(50) 
  
  status      String   @default("SCHEDULED") 

  attendees   OpenHouseAttendee[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([propertyId])
}

model OpenHouseAttendee {
  id          String   @id @default(cuid())
  openHouseId String
  openHouse   OpenHouse @relation(fields: [openHouseId], references: [id], onDelete: Cascade)

  userId      String?
  user        User?     @relation(fields: [userId], references: [id])

  name        String?
  email       String?
  phone       String?
  
  status      String   @default("CONFIRMED") 

  createdAt   DateTime @default(now())

  @@unique([openHouseId, userId]) 
  @@index([openHouseId])
  @@index([email])
}